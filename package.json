{
  "name": "dos-usb",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.mjs",
  "description": "A modern UI for playing DOS games from a USB stick",
  "author": "Webber Takken",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "concurrently \"yarn dev\" \"electron .\"",
    "electron-build": "yarn build && electron-builder",
    "electron-start": "electron ."
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "electron-is-dev": "^3.0.1",
    "extract-zip": "^2.0.1",
    "jsdom": "^26.0.0",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-icons": "^2.2.7",
    "concurrently": "^8.2.2",
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.dosusb.app",
    "productName": "DOS USB",
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "portable"
    },
    "portable": {
      "artifactName": "DOSGamesPortable.exe"
    }
  },
  "volta": {
    "node": "22.14.0",
    "yarn": "4.7.0"
  }
}
